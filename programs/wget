local arguments = { ... }; -- This should be changed when the Porty Shell will be existing.

if (arguments[1] == nil) or (arguments[2] == nil) then
	print("Usage: wget <file> <url>");
end

local fstream = fs.open(arguments[2], "w");
fstream.write(http.get(...).readAll());
fstream.close();

print("Successfuly downloaded to " .. arguments[2] .. ".");
return;
